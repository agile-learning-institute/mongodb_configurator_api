{
  "description": "A user collection for testing the schema system",
  "bsonType": "object",
  "properties": {
    "_id": {
      "description": "The unique identifier for a user",
      "bsonType": "objectId"
    },
    "user_name": {
      "description": "Username",
      "pattern": "^\\S{1,40}$",
      "bsonType": "string"
    },
    "full_name": {
      "description": "Users Full Name",
      "pattern": "^[^\\t\\n\\r]{0,255}$",
      "bsonType": "string"
    },
    "status": {
      "description": "The status",
      "bsonType": "string",
      "enum": [
        "draft",
        "active",
        "archived"
      ]
    },
    "categories": {
      "description": "A users list of categorized tags",
      "bsonType": "array",
      "items": {
        "description": "A user category",
        "bsonType": "object",
        "properties": {
          "name": {
            "description": "Category Name assigned by the user",
            "pattern": "^\\S{1,40}$",
            "bsonType": "string"
          },
          "category": {
            "description": "The category type assigned by the user",
            "bsonType": "string",
            "enum": [
              "work",
              "personal",
              "project",
              "reference"
            ]
          },
          "tags": {
            "description": "A list of enumerated values assigned by the user",
            "bsonType": "array",
            "items": {
              "bsonType": "string",
              "enum": [
                "urgent",
                "important",
                "normal",
                "low",
                "completed",
                "in_progress",
                "blocked",
                "review"
              ]
            }
          }
        },
        "required": [
          "name",
          "category",
          "tags"
        ],
        "additionalProperties": false
      }
    },
    "preferences": {
      "description": "User preferences and settings",
      "bsonType": "object",
      "properties": {
        "notification_types": {
          "description": "Types of notifications the user wants to receive",
          "bsonType": "array",
          "items": {
            "bsonType": "string",
            "enum": [
              "system",
              "user",
              "content",
              "reminder"
            ]
          }
        },
        "delivery_channels": {
          "description": "Preferred delivery channels for notifications",
          "bsonType": "array",
          "items": {
            "bsonType": "string",
            "enum": [
              "email",
              "sms",
              "push",
              "in_app"
            ]
          }
        },
        "content_tags": {
          "description": "Content tags the user is interested in",
          "bsonType": "array",
          "items": {
            "bsonType": "string",
            "enum": [
              "technology",
              "business",
              "entertainment",
              "education",
              "news"
            ]
          }
        },
        "priority_levels": {
          "description": "Priority levels the user wants to receive",
          "bsonType": "array",
          "items": {
            "bsonType": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          }
        }
      },
      "required": [
        "notification_types",
        "delivery_channels"
      ],
      "additionalProperties": false
    },
    "email": {
      "description": "The person's email address",
      "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "bsonType": "string"
    },
    "phone": {
      "description": "The person's phone number",
      "pattern": "^\\+1[2-9][0-9]{9}$",
      "bsonType": "string"
    },
    "last_saved": {
      "description": "The last time this document was saved",
      "bsonType": "object",
      "properties": {
        "from_ip": {
          "description": "Http Request remote IP address",
          "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
          "bsonType": "string"
        },
        "by_user": {
          "description": "ID Of User",
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        },
        "at_time": {
          "description": "The date-time when last updated",
          "bsonType": "date"
        },
        "correlation_id": {
          "description": "The logging correlation ID of the update transaction",
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "from_ip",
        "by_user",
        "at_time",
        "correlation_id"
      ]
    }
  },
  "required": [
    "_id",
    "user_name",
    "status",
    "last_saved"
  ],
  "additionalProperties": false
}