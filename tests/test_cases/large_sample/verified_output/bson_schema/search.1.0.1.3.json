{
  "description": "A search index that is used to support a elastic search polymorphic query service",
  "bsonType": "object",
  "properties": {
    "collection_name": {
      "description": "The name of the collection",
      "pattern": "^\\S{1,40}$",
      "bsonType": "string"
    },
    "collection_id": {
      "description": "The unique identifier for this source document",
      "bsonType": "objectId"
    }
  },
  "required": [
    "collection_name",
    "collection_id"
  ],
  "additionalProperties": false,
  "oneOf": [
    {
      "description": "A media item in the system",
      "bsonType": "object",
      "properties": {
        "_id": {
          "description": "The unique identifier for the media",
          "bsonType": "objectId"
        },
        "title": {
          "description": "The title of the media",
          "pattern": "^[^\\t\\n\\r]{0,255}$",
          "bsonType": "string"
        },
        "type": {
          "description": "The type of media",
          "bsonType": "string",
          "enum": [
            "movie",
            "tv_show",
            "documentary",
            "short"
          ]
        },
        "status": {
          "description": "The current status of the media",
          "bsonType": "string",
          "enum": [
            "draft",
            "published",
            "archived"
          ]
        },
        "last_saved": {
          "description": "When the media was last updated",
          "bsonType": "object",
          "properties": {
            "from_ip": {
              "description": "Http Request remote IP address",
              "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
              "bsonType": "string"
            },
            "by_user": {
              "description": "ID Of User",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            },
            "at_time": {
              "description": "The date-time when last updated",
              "bsonType": "date"
            },
            "correlation_id": {
              "description": "The logging correlation ID of the update transaction",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "from_ip",
            "by_user",
            "at_time",
            "correlation_id"
          ]
        },
        "tags": {
          "description": "Tags associated with the media",
          "bsonType": "array",
          "items": {
            "bsonType": "string",
            "enum": [
              "action",
              "comedy",
              "drama",
              "sci_fi",
              "documentary"
            ]
          }
        },
        "metadata": {
          "description": "Additional metadata about the media",
          "bsonType": "object",
          "properties": {
            "duration": {
              "description": "Duration in minutes",
              "bsonType": "int",
              "minimum": 1
            },
            "format": {
              "description": "Media format",
              "bsonType": "string",
              "enum": [
                "dvd",
                "bluray",
                "digital",
                "streaming"
              ]
            },
            "quality": {
              "description": "Quality rating",
              "bsonType": "string",
              "enum": [
                "sd",
                "hd",
                "uhd"
              ]
            },
            "content_data": {
              "description": "Media-specific content data",
              "bsonType": "object",
              "properties": {},
              "additionalProperties": false,
              "oneOf": [
                {
                  "description": "Movie-specific metadata",
                  "bsonType": "object",
                  "properties": {
                    "director": {
                      "description": "Movie director",
                      "pattern": "^\\S{1,40}$",
                      "bsonType": "string"
                    },
                    "cast": {
                      "description": "Movie cast members",
                      "bsonType": "array",
                      "items": {
                        "description": "Cast member",
                        "pattern": "^\\S{1,40}$",
                        "bsonType": "string"
                      }
                    },
                    "genre": {
                      "description": "Movie genre",
                      "bsonType": "array",
                      "items": {
                        "bsonType": "string",
                        "enum": [
                          "action",
                          "comedy",
                          "drama",
                          "sci_fi",
                          "documentary"
                        ]
                      }
                    }
                  },
                  "required": [
                    "director"
                  ],
                  "additionalProperties": false
                },
                {
                  "description": "TV show-specific metadata",
                  "bsonType": "object",
                  "properties": {
                    "season": {
                      "description": "Season number",
                      "bsonType": "int",
                      "minimum": 1
                    },
                    "episode": {
                      "description": "Episode number",
                      "bsonType": "int",
                      "minimum": 1
                    },
                    "network": {
                      "description": "Broadcasting network",
                      "pattern": "^\\S{1,40}$",
                      "bsonType": "string"
                    }
                  },
                  "required": [
                    "season",
                    "episode"
                  ],
                  "additionalProperties": false
                },
                {
                  "description": "Documentary-specific metadata",
                  "bsonType": "object",
                  "properties": {
                    "subject": {
                      "description": "Documentary subject",
                      "pattern": "^[^\\t\\n\\r]{0,255}$",
                      "bsonType": "string"
                    },
                    "narrator": {
                      "description": "Documentary narrator",
                      "pattern": "^\\S{1,40}$",
                      "bsonType": "string"
                    }
                  },
                  "required": [
                    "subject"
                  ],
                  "additionalProperties": false
                },
                {
                  "description": "Short film-specific metadata",
                  "bsonType": "object",
                  "properties": {
                    "festival": {
                      "description": "Film festival",
                      "pattern": "^\\S{1,40}$",
                      "bsonType": "string"
                    },
                    "awards": {
                      "description": "Awards received",
                      "bsonType": "array",
                      "items": {
                        "description": "Award name",
                        "pattern": "^\\S{1,40}$",
                        "bsonType": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "_id",
        "title",
        "status",
        "last_saved"
      ],
      "additionalProperties": false
    },
    {
      "description": "An organization in the system",
      "bsonType": "object",
      "properties": {
        "_id": {
          "description": "The unique identifier for the organization",
          "bsonType": "objectId"
        },
        "name": {
          "description": "The organization name",
          "pattern": "^[^\\t\\n\\r]{0,255}$",
          "bsonType": "string"
        },
        "status": {
          "description": "The current status of the organization",
          "bsonType": "string",
          "enum": [
            "draft",
            "active",
            "archived"
          ]
        },
        "last_saved": {
          "description": "When the organization document was last updated",
          "bsonType": "object",
          "properties": {
            "from_ip": {
              "description": "Http Request remote IP address",
              "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
              "bsonType": "string"
            },
            "by_user": {
              "description": "ID Of User",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            },
            "at_time": {
              "description": "The date-time when last updated",
              "bsonType": "date"
            },
            "correlation_id": {
              "description": "The logging correlation ID of the update transaction",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "from_ip",
            "by_user",
            "at_time",
            "correlation_id"
          ]
        },
        "users": {
          "description": "Users associated with this organization",
          "bsonType": "array",
          "items": {
            "description": "A user identifier",
            "bsonType": "objectId"
          }
        },
        "website": {
          "description": "Organization website",
          "pattern": "^https?://[^\\s]+$",
          "bsonType": "string"
        },
        "home_address": {
          "description": "Organization home address",
          "bsonType": "object",
          "properties": {
            "street": {
              "description": "Street address",
              "pattern": "^[^\\t\\n\\r]{0,255}$",
              "bsonType": "string"
            },
            "city": {
              "description": "City",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            },
            "state": {
              "description": "State or province",
              "pattern": "^[A-Z]{2}$",
              "bsonType": "string"
            },
            "postal_code": {
              "description": "Postal code",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "street",
            "postal_code"
          ]
        }
      },
      "required": [
        "_id",
        "name",
        "status",
        "last_saved"
      ],
      "additionalProperties": false
    },
    {
      "description": "A user collection for testing the schema system",
      "bsonType": "object",
      "properties": {
        "_id": {
          "description": "The unique identifier for a user",
          "bsonType": "objectId"
        },
        "user_name": {
          "description": "Username",
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        },
        "full_name": {
          "description": "Users Full Name",
          "pattern": "^[^\\t\\n\\r]{0,255}$",
          "bsonType": "string"
        },
        "status": {
          "description": "The status",
          "bsonType": "string",
          "enum": [
            "draft",
            "active",
            "archived"
          ]
        },
        "categories": {
          "description": "A users list of categorized tags",
          "bsonType": "array",
          "items": {
            "description": "A user category",
            "bsonType": "object",
            "properties": {
              "name": {
                "description": "Category Name assigned by the user",
                "pattern": "^\\S{1,40}$",
                "bsonType": "string"
              },
              "category": {
                "description": "The category type assigned by the user",
                "bsonType": "string",
                "enum": [
                  "work",
                  "personal",
                  "project",
                  "reference"
                ]
              },
              "tags": {
                "description": "A list of enumerated values assigned by the user",
                "bsonType": "array",
                "items": {
                  "bsonType": "string",
                  "enum": [
                    "urgent",
                    "important",
                    "normal",
                    "low",
                    "completed",
                    "in_progress",
                    "blocked",
                    "review"
                  ]
                }
              }
            },
            "required": [
              "name",
              "category",
              "tags"
            ],
            "additionalProperties": false
          }
        },
        "preferences": {
          "description": "User preferences and settings",
          "bsonType": "object",
          "properties": {
            "notification_types": {
              "description": "Types of notifications the user wants to receive",
              "bsonType": "array",
              "items": {
                "bsonType": "string",
                "enum": [
                  "system",
                  "user",
                  "content",
                  "reminder"
                ]
              }
            },
            "delivery_channels": {
              "description": "Preferred delivery channels for notifications",
              "bsonType": "array",
              "items": {
                "bsonType": "string",
                "enum": [
                  "email",
                  "sms",
                  "push",
                  "in_app"
                ]
              }
            },
            "content_tags": {
              "description": "Content tags the user is interested in",
              "bsonType": "array",
              "items": {
                "bsonType": "string",
                "enum": [
                  "technology",
                  "business",
                  "entertainment",
                  "education",
                  "news"
                ]
              }
            },
            "priority_levels": {
              "description": "Priority levels the user wants to receive",
              "bsonType": "array",
              "items": {
                "bsonType": "string",
                "enum": [
                  "critical",
                  "high",
                  "medium",
                  "low"
                ]
              }
            }
          },
          "required": [
            "notification_types",
            "delivery_channels"
          ],
          "additionalProperties": false
        },
        "email": {
          "description": "The person's email address",
          "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
          "bsonType": "string"
        },
        "phone": {
          "description": "The person's phone number",
          "pattern": "^\\+1[2-9][0-9]{9}$",
          "bsonType": "string"
        },
        "last_saved": {
          "description": "The last time this document was saved",
          "bsonType": "object",
          "properties": {
            "from_ip": {
              "description": "Http Request remote IP address",
              "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
              "bsonType": "string"
            },
            "by_user": {
              "description": "ID Of User",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            },
            "at_time": {
              "description": "The date-time when last updated",
              "bsonType": "date"
            },
            "correlation_id": {
              "description": "The logging correlation ID of the update transaction",
              "pattern": "^\\S{1,40}$",
              "bsonType": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "from_ip",
            "by_user",
            "at_time",
            "correlation_id"
          ]
        }
      },
      "required": [
        "_id",
        "user_name",
        "status",
        "last_saved"
      ],
      "additionalProperties": false
    }
  ]
}