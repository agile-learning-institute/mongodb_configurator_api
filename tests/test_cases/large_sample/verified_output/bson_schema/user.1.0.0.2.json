{
  "description": "A user collection for testing the schema system",
  "bsonType": "object",
  "properties": {
    "_id": {
      "description": "The unique identifier for a user",
      "bsonType": "objectId"
    },
    "user_name": {
      "description": "Username",
      "pattern": "^\\S{1,40}$",
      "bsonType": "string"
    },
    "first_name": {
      "description": "Users First Name",
      "pattern": "^\\S{1,40}$",
      "bsonType": "string"
    },
    "last_name": {
      "description": "Users Last Name",
      "pattern": "^\\S{1,40}$",
      "bsonType": "string"
    },
    "status": {
      "description": "document status",
      "bsonType": "string",
      "enum": [
        "draft",
        "active",
        "archived"
      ]
    },
    "last_saved": {
      "description": "The last time this document was saved",
      "bsonType": "object",
      "properties": {
        "from_ip": {
          "description": "Http Request remote IP address",
          "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
          "bsonType": "string"
        },
        "by_user": {
          "description": "ID Of User",
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        },
        "at_time": {
          "description": "The date-time when last updated",
          "bsonType": "date"
        },
        "correlation_id": {
          "description": "The logging correlation ID of the update transaction",
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "from_ip",
        "by_user",
        "at_time",
        "correlation_id"
      ]
    }
  },
  "required": [
    "_id",
    "user_name",
    "status",
    "last_saved"
  ],
  "additionalProperties": false
}