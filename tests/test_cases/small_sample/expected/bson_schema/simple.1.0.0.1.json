{
  "bsonType": "object",
  "properties": {
    "_id": {
      "bsonType": "objectId",
      "pattern": "^[0-9a-fA-F]{24}$"
    },
    "name": {
      "bsonType": "string",
      "pattern": "^[a-zA-Z0-9\\s.,!?-]{4,255}$"
    },
    "status": {
      "bsonType": "string",
      "enum": ["draft", "active", "archived"]
    }
  },
  "required": ["_id", "name", "status"], 
  "additionalProperties": false
} 