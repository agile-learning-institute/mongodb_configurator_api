{
  "bsonType": "object",
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "name": {
      "bsonType": "string",
      "pattern": "^[a-zA-Z0-9_-]{4,40}$"
    },
    "status": {
      "bsonType": "string",
      "enum": ["active", "archived"]
    }
  },
  "required": ["_id", "status"], 
  "additionalProperties": false
} 