{
  "description": "A simple collection for testing",
  "bsonType": "object",
  "properties": {
    "_id": {
      "description": "The unique identifier for the media",
      "bsonType": "objectId"
    },
    "name": {
      "description": "The name of the document",
      "bsonType": "string",
      "pattern": "^\\S{1,40}$"
    },
    "status": {
      "description": "The current status of the document",
      "bsonType": "string",
      "enum": [
        "active",
        "archived"
      ]
    }
  },
  "required": [
    "_id",
    "status"
  ],
  "additionalProperties": false
} 