bsonType: object
required: ["_id", "title", "status", "last_saved"]
properties:
  _id:
    bsonType: objectId
    pattern: "^[0-9a-fA-F]{24}$"
  title:
    bsonType: string
    pattern: "^[a-zA-Z0-9\\s.,!?-]{4,255}$"
  type:
    bsonType: string
    enum: ["video", "audio", "image", "document"]
  status:
    bsonType: string
    enum: ["draft", "active", "archived"]
  last_saved:
    bsonType: object
    required: ["from_ip", "by_user", "at_time", "correlation_id"]
    properties:
      from_ip:
        bsonType: string
        pattern: "^[a-zA-Z0-9_-]{4,40}$"
      by_user:
        bsonType: string
        pattern: "^[a-zA-Z0-9_-]{4,40}$"
      at_time:
        bsonType: date
      correlation_id:
        bsonType: string
        pattern: "^[a-zA-Z0-9_-]{4,40}$"
  tags:
    bsonType: array
    items:
      bsonType: string
      enum: ["educational", "entertainment", "tutorial", "documentary"]
  metadata:
    bsonType: object
    properties:
      duration:
        bsonType: int
        minimum: 1
        multipleOf: 1
      format:
        bsonType: string
        enum: ["mp4", "mp3", "jpg", "pdf"]
      quality:
        bsonType: string
        enum: ["low", "medium", "high", "ultra"] 