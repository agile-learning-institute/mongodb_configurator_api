{
  "bsonType": "object",
  "additionalProperties": false,
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "full_name": {
      "bsonType": "string",
      "pattern": "^[^\\t\\n]{0,255}$"
    },
    "status": {
      "bsonType": "string",
      "enum": [
        "active",
        "archived",
        "draft"
      ]
    }
  },
  "required": [
    "_id",
    "full_name",
    "status"
  ]
} 