{
  "bsonType": "object",
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "full_name": {
      "pattern": "^[^\\t\\n\\r]{0,255}$",
      "bsonType": "string"
    },
    "status": {
      "bsonType": "string",
      "enum": [
        "draft",
        "active",
        "archived"
      ]
    }
  },
  "required": [
    "_id",
    "full_name",
    "status"
  ],
  "additionalProperties": false
}