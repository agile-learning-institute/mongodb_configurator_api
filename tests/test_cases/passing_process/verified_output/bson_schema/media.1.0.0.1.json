{
  "bsonType": "object",
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "title": {
      "pattern": "^[^\\t\\n\\r]{0,255}$",
      "bsonType": "string"
    },
    "type": {
      "bsonType": "string",
      "enum": [
        "movie",
        "tv_show",
        "documentary",
        "short",
        "image",
        "audio"
      ]
    },
    "status": {
      "bsonType": "string",
      "enum": [
        "published",
        "draft",
        "processing",
        "archived",
        "scheduled"
      ]
    },
    "last_saved": {
      "bsonType": "object",
      "properties": {
        "from_ip": {
          "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
          "bsonType": "string"
        },
        "by_user": {
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        },
        "at_time": {
          "bsonType": "date"
        },
        "correlation_id": {
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "from_ip",
        "by_user",
        "at_time",
        "correlation_id"
      ]
    },
    "tags": {
      "bsonType": "array",
      "items": {
        "bsonType": "string",
        "enum": [
          "action",
          "sci_fi",
          "documentary",
          "drama",
          "comedy",
          "thriller",
          "art",
          "painting",
          "music",
          "song"
        ]
      }
    },
    "metadata": {
      "oneOf": [
        {
          "bsonType": "object",
          "properties": {
            "duration": {
              "bsonType": "int",
              "minimum": 1
            },
            "format": {
              "bsonType": "string",
              "enum": [
                "bluray",
                "dvd",
                "digital",
                "streaming",
                "jpg"
              ]
            },
            "quality": {
              "bsonType": "string",
              "enum": [
                "hd",
                "uhd",
                "sd",
                "fhd"
              ]
            }
          },
          "required": [
            "format"
          ],
          "additionalProperties": false
        },
        {
          "bsonType": "object",
          "properties": {
            "audio_url": {
              "pattern": "^https?://[^\\s]+$",
              "bsonType": "string"
            },
            "duration": {
              "bsonType": "int",
              "minimum": 1
            },
            "format": {
              "bsonType": "string",
              "enum": [
                "mp3",
                "wav",
                "aac",
                "ogg",
                "flac"
              ]
            }
          },
          "required": [
            "audio_url"
          ],
          "additionalProperties": false
        },
        {
          "bsonType": "object",
          "properties": {
            "image_url": {
              "pattern": "^https?://[^\\s]+$",
              "bsonType": "string"
            },
            "width": {
              "bsonType": "int",
              "minimum": 1
            },
            "height": {
              "bsonType": "int",
              "minimum": 1
            },
            "format": {
              "bsonType": "string",
              "enum": [
                "jpg",
                "png",
                "gif",
                "webp",
                "svg"
              ]
            }
          },
          "required": [
            "image_url"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "_id",
    "title",
    "status",
    "last_saved"
  ],
  "additionalProperties": false
}