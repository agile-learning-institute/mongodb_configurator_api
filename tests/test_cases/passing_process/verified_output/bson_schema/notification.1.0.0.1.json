{
  "bsonType": "object",
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "user_id": {
      "bsonType": "objectId"
    },
    "title": {
      "pattern": "^[^\\t\\n\\r]{0,255}$",
      "bsonType": "string"
    },
    "message": {
      "pattern": "^[^\\t\\n\\r]{0,255}$",
      "bsonType": "string"
    },
    "status": {
      "bsonType": "string",
      "enum": [
        "active",
        "archived"
      ]
    },
    "last_saved": {
      "bsonType": "object",
      "properties": {
        "from_ip": {
          "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
          "bsonType": "string"
        },
        "by_user": {
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        },
        "at_time": {
          "bsonType": "date"
        },
        "correlation_id": {
          "pattern": "^\\S{1,40}$",
          "bsonType": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "from_ip",
        "by_user",
        "at_time",
        "correlation_id"
      ]
    }
  },
  "required": [
    "_id",
    "user_id",
    "title",
    "message",
    "status",
    "last_saved"
  ],
  "additionalProperties": false
}